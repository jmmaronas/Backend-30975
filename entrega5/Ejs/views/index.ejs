<%- include("./partials/head.ejs") %>
<body>
    <%- include("./partials/nav.ejs") %>
    <div class="container">
        <a href='/productos/cargar' class="btn btn-success">Cargar Productos</a>
    </div>
    <div class="container d-flex">
        <% products.forEach(elem=>{ %>
            <div class="card" style="width: 18rem;">
                <img src="<%= elem.thumbnail %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= elem.title %>
                    </h5>
                    <p class="card-text">
                        <%= elem.price %>
                    </p>
                    <a href="/productos/<%= elem.id %>" class="btn btn-primary">Editar</a>
                </div>
            </div>
            <% }) %>
    </div>
    
</body>

</html>